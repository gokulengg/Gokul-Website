# Enable GZIP compression for faster loading
<IfModule mod_deflate.c>
  AddOutputFilterByType DEFLATE text/html text/plain text/xml text/css text/javascript application/javascript
</IfModule>

# Leverage browser caching
<IfModule mod_expires.c>
  ExpiresActive On
  
  # Images
  ExpiresByType image/jpeg "access plus 1 year"
  ExpiresByType image/gif "access plus 1 year"
  ExpiresByType image/png "access plus 1 year"
  ExpiresByType image/webp "access plus 1 year"
  
  # CSS and JavaScript
  ExpiresByType text/css "access plus 1 month"
  ExpiresByType application/javascript "access plus 1 month"
  ExpiresByType text/javascript "access plus 1 month"
  
  # Fonts
  ExpiresByType font/truetype "access plus 1 year"
  ExpiresByType font/opentype "access plus 1 year"
  ExpiresByType application/x-font-woff "access plus 1 year"
  
  # HTML
  ExpiresByType text/html "access plus 2 weeks"
  
  # Default
  ExpiresDefault "access plus 2 weeks"
</IfModule>

# Set proper caching headers
<IfModule mod_headers.c>
  <FilesMatch "\.(jpg|jpeg|png|gif|webp|js|css|swf|ico|woff|woff2|ttf|eot)$">
    Header set Cache-Control "max-age=31536000, public"
  </FilesMatch>
  <FilesMatch "\.(html|htm)$">
    Header set Cache-Control "max-age=604800, public"
  </FilesMatch>
  <FilesMatch "\.(json|xml)$">
    Header set Cache-Control "max-age=3600, public"
  </FilesMatch>
</IfModule>

# Enable mod_rewrite for URL rewrites
<IfModule mod_rewrite.c>
  RewriteEngine On
  
  # Remove www prefix (optional - adjust based on preference)
  # RewriteCond %{HTTP_HOST} ^www\.(.*)$ [NC]
  # RewriteRule ^(.*)$ https://%1/$1 [R=301,L]
  
  # Redirect HTTP to HTTPS
  # RewriteCond %{HTTPS} off
  # RewriteRule ^ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]
  
  # Prevent access to certain files
  RewriteRule ^(.*/)?\.git(/|$) - [F]
  RewriteRule ^(.*/)?\.well-known(/|$) - [F]
  
  # Security headers
  Header always set X-Content-Type-Options "nosniff"
  Header always set X-Frame-Options "SAMEORIGIN"
  Header always set X-XSS-Protection "1; mode=block"
  Header always set Referrer-Policy "strict-origin-when-cross-origin"
</IfModule>

# Block bad user agents
<IfModule mod_setenvif.c>
  SetEnvIf Request_URI "^.*$" REQUEST_WANT_TO_LOG=1
  SetEnvIf User-Agent "^$" REQUEST_WANT_TO_LOG=0
  SetEnvIf User-Agent "MJ12bot" REQUEST_WANT_TO_LOG=0
  SetEnvIf User-Agent "AhrefsBot" REQUEST_WANT_TO_LOG=0
  SetEnvIf User-Agent "SemrushBot" REQUEST_WANT_TO_LOG=0
</IfModule>

# Remove ETags to improve caching
Header unset ETag
FileETag None

# Custom error pages (optional)
ErrorDocument 404 /404.html
ErrorDocument 500 /500.html
